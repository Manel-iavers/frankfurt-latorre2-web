<style>
  .footer {
    background: var(--color-dark);
    padding: var(--spacing-md) 0;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      flex-wrap: wrap;
      text-align: left;
    }
  }

  .footer-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-logo {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .footer-info {
    display: flex;
    flex-direction: column;
  }

  .footer-name {
    font-family: var(--font-heading);
    color: var(--color-white);
    font-size: 1rem;
  }

  .footer-since {
    color: var(--color-primary);
    font-size: 0.875rem;
  }

  .footer-details {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .footer-details {
      align-items: flex-start;
    }
  }

  .footer-contact {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-contact a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .footer-contact a:hover {
    color: var(--color-primary);
  }

  .separator {
    color: rgba(255, 255, 255, 0.3);
  }

  .footer-hours {
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border-radius: var(--radius-md);
    color: var(--color-white);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    color: var(--color-white);
    transform: translateY(-2px);
  }

  .footer-seo {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    width: 100%;
    text-align: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    line-height: 1.5;
  }

  .footer-copyright {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0;
    width: 100%;
    text-align: center;
    padding-top: 0.5rem;
  }
</style>
