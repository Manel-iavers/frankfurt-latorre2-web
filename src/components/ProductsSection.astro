---
import ProductCard from './ProductCard.astro';

// 6 Productes destacats amb preus correctes
const productesDestacats = [
  {
    name: "Burguer",
    description: "La reina de la casa! Carn de la Carnisseria del Carme, pa mollete de La Fleca del Gourmet",
    price: "5,00€",
    image: "/images/burguerWeb.png",
    badge: "Estrella"
  },
  {
    name: "Pit de Pollastre",
    description: "Filets de la Carnisseria del Carme, pa flauta extrem de La Fleca del Gourmet",
    price: "4,25€",
    image: "/images/pollastreWeb.png",
    badge: "Popular"
  },
  {
    name: "Frankfurt",
    description: "Deliciós frankfurt de Casa Vallès amb pa flauta extrem de La Fleca del Gourmet",
    price: "3,75€",
    image: "/images/frankfurtweb.png"
  },
  {
    name: "Pinxos",
    description: "Pinxos brutals de la Carnisseria del Carme, pa flauta de La Fleca del Gourmet",
    price: "4,25€",
    image: "/images/pinxoWeb.png"
  },
  {
    name: "Bratwurst",
    description: "Salsitxa alemanya tradicional de Casa Vallès amb pa flauta extrem",
    price: "4,25€",
    image: "/images/bratwurstWeb.png"
  },
  {
    name: "Pikantwurst",
    description: "Salsitxa picant de Casa Vallès amb pa flauta extrem",
    price: "4,25€",
    image: "/images/pikantWeb.png"
  }
];
---

<section class="products section" id="productes">
  <div class="container">
    <h2 class="section-title">Els Nostres <span class="text-primary">Destacats</span></h2>
    <p class="section-subtitle">Productes de qualitat de proveïdors locals de Pineda</p>

    <div class="products-grid">
      {productesDestacats.map((product) => (
        <ProductCard {...product} />
      ))}
    </div>

    <div class="products-cta">
      <p>Descobreix tots els nostres entrepans i acompanyaments</p>
      <a href="/carta" class="btn btn-primary">Veure Carta Completa</a>
    </div>
  </div>
</section>

<style>
  .products {
    background: var(--color-white);
    padding: var(--spacing-xl) 0;
  }

  .section-subtitle {
    text-align: center;
    color: var(--color-gray);
    margin-bottom: var(--spacing-lg);
    font-size: 1.125rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: var(--spacing-lg);
  }

  .products-cta {
    text-align: center;
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .products-cta p {
    font-size: 1.125rem;
    color: var(--color-gray);
    margin-bottom: var(--spacing-sm);
  }
</style>
